<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">


    <Button
        android:id="@+id/buttonOffline"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:fontFamily="@font/anton"
        android:text="OFFLINE"
        android:textAlignment="gravity"
        android:textColorHighlight="#ffffff"
        android:textSize="35sp"
        android:gravity="center"
        android:background="@drawable/shape_button_offline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.58000004"></Button>

    <Button
        android:id="@+id/buttonOnline"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:background="@drawable/shape_button_online"
        android:fontFamily="@font/anton"
        android:gravity="center"
        android:text="ONLINE"
        android:textAlignment="gravity"
        android:textColorHighlight="#ffffff"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>